# ================================
# FRONTEND ENVIRONMENT TEMPLATE - SAFE FOR VERSION CONTROL
# ================================
# Copy this to .env and fill in your actual values

# ================================
# BACKEND API CONFIGURATION
# ================================
VITE_API_BASE_URL=http://localhost:8000/api
VITE_BACKEND_URL=http://localhost:8000

# For production (Vercel + Railway):
# VITE_API_BASE_URL=https://your-railway-backend.up.railway.app/api  
# VITE_BACKEND_URL=https://your-railway-backend.up.railway.app

# ================================
# OPENAI CONFIGURATION (Frontend features)
# ================================
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ================================
# AI FEATURES CONFIGURATION
# ================================
VITE_AI_VOICE_ENABLED=true
VITE_AI_REALTIME_ANALYSIS=true
VITE_AI_AUTOCOMPLETE=true
VITE_AI_SMART_SUGGESTIONS=true
VITE_AI_ERROR_DETECTION=true
VITE_AI_QUALITY_SCORING=true

# ================================
# VOICE RECOGNITION SETTINGS
# ================================
VITE_VOICE_LANGUAGE=en-US
VITE_VOICE_CONTINUOUS=true
VITE_VOICE_INTERIM_RESULTS=true

# ================================
# MEDICAL FEATURES CONFIGURATION
# ================================
VITE_MEDICAL_TERMINOLOGY_ENABLED=true
VITE_MEDICAL_AUTOCOMPLETE=true
VITE_DICOM_VIEWER_ENABLED=true
VITE_DICOM_ANNOTATIONS=true
VITE_DICOM_MEASUREMENTS=true
VITE_DICOM_3D_RECONSTRUCTION=false

# ================================
# PERFORMANCE SETTINGS
# ================================
VITE_MEDICAL_API_TIMEOUT=8000
VITE_FAST_API_TIMEOUT=5000
VITE_GRACEFUL_DEGRADATION=true
VITE_DEFAULT_MEDICAL_QUERY=lung

# ================================
# SECURITY & COMPLIANCE
# ================================
VITE_HIPAA_COMPLIANCE=true
VITE_GDPR_COMPLIANCE=true
VITE_AUDIT_LOGGING=true
VITE_DATA_ENCRYPTION=true

# ================================
# DEVELOPMENT SETTINGS
# ================================
VITE_DEBUG_MODE=false
VITE_ENABLE_GRACEFUL_ERRORS=true
VITE_ERROR_DISPLAY_TIMEOUT=5000

# ================================
# APPLICATION INFO
# ================================
VITE_APP_NAME=MediXScan Radiology System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced Medical Radiology Management System