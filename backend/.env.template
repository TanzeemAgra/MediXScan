# ================================
# ENVIRONMENT TEMPLATE - SAFE FOR VERSION CONTROL
# ================================
# Copy this to .env and fill in your actual values
# This template shows required variables without exposing secrets

# ================================
# DATABASE CONFIGURATION
# ================================
# For Railway: These will be auto-populated by Railway PostgreSQL
DB_NAME=your_database_name
DB_USER=your_username  
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# ================================
# DJANGO CONFIGURATION
# ================================
SECRET_KEY=generate_a_secure_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ================================
# OPENAI CONFIGURATION
# ================================
OPENAI_API_KEY=your_openai_api_key_here

# ================================
# CORS CONFIGURATION
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5175,http://127.0.0.1:3000,http://127.0.0.1:5175

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ================================
# AWS S3 CONFIGURATION (Optional)
# ================================
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ================================
# ENVIRONMENT
# ================================
ENVIRONMENT=development